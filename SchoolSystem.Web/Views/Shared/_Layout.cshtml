<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <title>@ViewData["Title"] - EduSmart</title>
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="~/img/favicon/favicon.ico"/>

  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

  <!-- Additional CSS Files -->
  <link rel="stylesheet" href="~/assets/css/fontawesome.css">
  <link rel="stylesheet" href="~/assets/css/templatemo-scholar.css">
  <link rel="stylesheet" href="~/assets/css/owl.css">
  <link rel="stylesheet" href="~/assets/css/animate.css">
  <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>


  <style>
    .header-sticky {
      background-color: #7a6ad8;
      color: #fff;
      box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
      padding: 20px 0;
      margin: 0;
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 99;
    }
  </style>
</head>
<body>
<!-- ***** Preloader Start ***** -->
<div id="js-preloader" class="js-preloader">
  <div class="preloader-inner">
    <span class="dot"></span>
    <div class="dots">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
</div>
<!-- ***** Preloader End ***** -->

<!-- ***** Header Area Start ***** -->
<header class="header-area header-sticky">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <nav class="main-nav">
          <!-- ***** Logo Start ***** -->
          <a asp-action="Index" asp-area="" asp-controller="Home" class="logo">
            <h1>EduSmart</h1>
          </a>
          <ul class="nav">
            <li class="scroll-to-section">
              <a
                asp-action="Index"
                asp-controller="Home"
                asp-area="" id="home">
                Home
              </a>
            </li>
            <li class="scroll-to-section">
              <a asp-action="Courses" asp-area="" asp-controller="Home"
                 id="courses">
                Courses
              </a>
            </li>
            <li class="scroll-to-section">
              <a asp-action="About" asp-area="" asp-controller="Home"
                 id="about">
                About us
              </a>
            </li>
            <li class="scroll-to-section">
              <a asp-action="Privacy" asp-area=""
                 asp-controller="Home" id="privacy">
                Privacy
              </a>
            </li>
            <li class="scroll-to-section">
              <a asp-action="Login"
                 asp-controller="Auth"
                 asp-area="">
                Login
              </a>
            </li>
          </ul>
          <a class='menu-trigger'>
            <span>Menu</span>
          </a>
          <!-- ***** Menu End ***** -->
        </nav>
      </div>
    </div>
  </div>
</header>
<!-- ***** Header Area End ***** -->

<main role="main" style="width: 100%">
  @RenderBody()
</main>

<footer>
  <div class="container">
    <div class="col-lg-12">
      <p>Copyright &copy; 2024 - EduSmart - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/js/isotope.min.js"></script>
<script src="~/assets/js/owl-carousel.js"></script>
<script src="~/assets/js/counter.js"></script>
<script src="~/assets/js/custom.js"></script>
<script src="~/assets/js/active-tab.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
