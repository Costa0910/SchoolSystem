@if (@ViewBag.Message != null)
{
  <div class="bs-toast toast toast-ex animate__animated my-2 fade
    bg-primary animate__tada show" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000">
    <div class="toast-header">
      <i class="ri-notification-line" style="margin-right: 5px"></i>
      <div class="me-auto fw-medium">Notification</div>
      <small>1 seconds ago</small>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body text-white">
      @ViewBag.Message
    </div>
  </div>
}
