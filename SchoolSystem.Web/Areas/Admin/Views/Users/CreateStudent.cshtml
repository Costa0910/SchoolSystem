
@model SchoolSystem.Web.Areas.Admin.ViewModels.Users.CreateStudentViewModel

@{
    ViewBag.Title = "Create Student - Account Page";
}

@* ************** Content ************** *@
<div class="row">
  <div class="col-md-12">
    <div class="card mb-6">
      <div class="card-body pt-0">
        <form id="formAccountSettings" method="post"
              asp-action="CreateStudent" enctype="multipart/form-data">
          @Html.AntiForgeryToken()
          <div asp-validation-summary="ModelOnly"></div>

            <div class="d-flex align-items-start align-items-sm-center gap-6 mt-4">
              <img src="~/img/avatars/1.png" alt="user-avatar" class="d-block w-px-100 h-px-100 rounded" id="uploadedAvatar" />
              <div class="button-wrapper">
                <label for="upload" class="btn btn-sm btn-primary me-3 mb-4" tabindex="0">
                  <span class="d-none d-sm-block">Upload @Html.DisplayNameFor(model => model.ProfilePhoto)</span>
                  <i class="ri-upload-2-line d-block d-sm-none"></i>
                  <input asp-for="ProfilePhoto" type="file" id="upload" class="account-file-input"
                         hidden accept="image/png, image/jpeg" />
                </label>
                <button type="button" class="btn btn-sm btn-outline-danger account-image-reset mb-4">
                  <i class="ri-refresh-line d-block d-sm-none"></i>
                  <span class="d-none d-sm-block">Reset</span>
                </button>

                <div>Allowed JPG or PNG.</div>
                <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
              </div>
            </div>

          @* Coumn user fields *@
          <div class="row mt-1 g-5">
            <partial name="_User"/>

            @* Non common fields *@
            <div class="col-md-6">
              <div class="form-floating form-floating-outline">
                <input asp-for="Photo" class="form-control" type="file"
                       required accept="image/png, image/jpeg"/>
                <label>@Html.DisplayNameFor(model => model.Photo)</label>
              </div>
              <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
          </div>

          <div class="mt-6 d-flex gap-2 flex-wrap">
            <a asp-action="Index" class="btn btn-outline-primary me-3">Back to
              users</a>
            <button type="submit" class="btn btn-primary me-3">Create Student</button>
            <button type="reset" class="btn btn-outline-secondary">Reset</button>
          </div>
        </form>
      </div>
      <!-- /Account -->
    </div>
  </div>
</div>

@* Scripts  *@
@section PageScripts {
  <partial name="_UserScripts"/>
}



