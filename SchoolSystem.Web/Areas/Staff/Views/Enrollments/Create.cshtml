@model SchoolSystem.Web.Areas.Staff.ViewModels.Enrollments.CreateEnrollmentsViewModel

@{
  ViewBag.Title = "Enroll Student in Course - Page";
}


<div class="row">
  <div class="clos-md-12">
    <partial name="_Alerts"/>
    <div class="card">
      <div class="card-header d-flex justify-content-center">
        <h4 class="card-title">Enroll Student into Course</h4>
      </div>
      <div class="card-body pt-0">
        <form id="formAccountSettings" method="post" asp-action="Create">
          @Html.AntiForgeryToken()
          <div asp-validation-summary="ModelOnly"></div>
          <div class="row g-5">
            <div class="d-flex flex-column">
              <div class="form-floating form-floating-outline w-60 align-self-center">
                <select id="courses" class="select2 form-select"
                        asp-for="CourseId">
                  <option value="">Choose a course to enroll student</option>
                  @foreach (var course in Model.Courses)
                  {
                    <option value="@course.Id">@course.Name</option>
                  }
                </select>
                <label asp-for="CourseId">Courses</label>
              </div>
              <span asp-validation-for="CourseId" class="text-danger
              w-60 align-self-center"></span>
            </div>

            <div class="d-flex flex-column">
              <div class="form-floating form-floating-outline w-60 align-self-center">
                <select id="students" class="select2 form-select"
                        asp-for="StudentId">
                  <option value="">Select Student to enroll</option>
                  @foreach (var student in Model.Students)
                  {
                    <option value="@student.Id">
                      @student.User.FirstName
                      @student.User.LastName
                    </option>
                  }
                </select>
                <label asp-for="StudentId">Students</label>
              </div>
              <span asp-validation-for="StudentId" class="text-danger
              w-60 align-self-center"></span>
            </div>
          </div>
          <div class="mt-6 d-flex gap-2 flex-wrap justify-content-center">
            <a asp-action="Index" class="btn
            btn-outline-primary me-3">Back</a>
            <button type="submit" class="btn btn-primary me-3">Enroll</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

@section PageScripts
{
  <ejs-scripts></ejs-scripts>

  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
  <script src="~/js/Enrollment.js"></script>
}
